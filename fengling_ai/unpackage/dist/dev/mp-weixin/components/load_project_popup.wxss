.pop_inner {
  width: 88%;
  height: auto;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.pop_inner > .pop_bottom {
  width: 100%;
  font-size: 0;
  position: absolute;
  left: 0;
  top: 95%;
  z-index: 102;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.pop_inner > .pop_bottom image {
  width: 100%;
}
.pop_inner .close {
  position: absolute;
  font-size: 0;
  top: -68rpx;
  right: 4.5%;
}
.pop_inner .close image {
  width: 58rpx;
}
.pop_inner .wrap {
  width: 90.5%;
  margin: 0 auto;
  background: #FFFFFF;
  border-radius: 37rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.pop_inner .wrap .title {
  font-weight: 600;
  font-size: 38rpx;
  color: #282319;
  text-align: center;
  margin-bottom: 25rpx;
}
.pop_inner .wrap .outer {
  padding: 20rpx 25rpx 0 25rpx;
  background: url("https://static.test.swiftwd.com/worker/new/index_pro_bg1.png") no-repeat;
  background-size: 100% 100%;
}
.pop_inner .wrap .outer .top {
  width: 165rpx;
  padding: 6rpx 15rpx 6rpx 10rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-left: 20rpx;
  white-space: nowrap;
  flex-shrink: 0;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.pop_inner .wrap .outer .top .text {
  font-weight: 600;
  font-size: 23rpx;
  color: #AA691B;
}
.pop_inner .wrap .outer .top image {
  width: 50rpx;
  margin-right: 6rpx;
}
.pop_inner .wrap .outer .in_box {
  background: #FFFFFF url("https://static.test.swiftwd.com/worker/new/index_pro_bg2.png") no-repeat;
  background-size: 100% auto;
  background-position: center bottom;
  border-radius: 15rpx;
  padding: 26rpx 32rpx 70rpx 32rpx;
  text-align: center;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  box-sizing: border-box;
}
.pop_inner .wrap .outer .in_box .text {
  font-weight: 600;
  font-size: 31rpx;
  color: #020202;
}
.pop_inner .wrap .outer .in_box .text:nth-child(2) {
  font-family: Arial;
  font-weight: 900;
  font-size: 35rpx;
  color: #020202;
  margin-top: 15rpx;
  margin-bottom: 25rpx;
}
.pop_inner .wrap .outer .in_box .sure_btn {
  height: 81rpx;
  background: #EFC562;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(104, 78, 0, 0.5);
  border-radius: 15rpx;
  font-weight: 600;
  font-size: 29rpx;
  color: #282319;
  line-height: 81rpx;
  position: relative;
  z-index: 200;
}


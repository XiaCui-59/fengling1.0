 .input-placeholder {
  font-size: 28rpx !important;
}
.form {
  padding: 0 15px;
  color: #161616;
}
.form .title {
  height: 48px;
  line-height: 48px;
  font-size: 36rpx;
  font-weight: 600;
}
.form .tips {
  font-size: 27rpx;
  color: #757575;
  line-height: 38rpx;
  margin-bottom: 40rpx;
}
.form .btns .btn {
  height: 80rpx;
  width: 48%;
  line-height: 80rpx;
  text-align: center;
  font-size: 27rpx;
  color: #1F1F1F;
  background: #F7F7F7;
  border-radius: 40rpx;
}
.form .btns .btn:nth-child(2) {
  background: #216FF9;
  color: #FFFFFF;
}
.form .line_box {
  margin-bottom: 30rpx;
}
.form .line_box .tit {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.form .line_box .tit text {
  font-size: 28rpx;
  color: #757575;
}
.form .line_box .input_wrap input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e3e3e3;
  border-radius: 15rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.form .line_box:nth-child(4) .input_wrap input {
  width: calc(100% - 170rpx);
  flex-shrink: 0;
}
.form .line_box:nth-child(4) .input_wrap .btn {
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #216FF9;
  background: rgba(33, 111, 249, 0.1);
  margin-left: 0;
  margin-right: 0;
  padding: 0;
}

